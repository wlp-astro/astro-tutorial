---
const { title, author } = Astro.props.frontmatter;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 20px;
        width: 1100px;
        margin: 0 auto;
      }

      header {
        border-bottom: 1px solid #ddd;
        margin-bottom: 20px;
        padding-bottom: 10px;
      }

      .rap-block {
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .rap-block img {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <p>{author}</p>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
